{
  "name": "zero-g",
  "version": "0.3.0",
  "description": "A utility library for efficiently adding panning and zooming capabilities to any DOM element. Comes with out-of-the-box TypeScript typings!",
  "main": "dist/index.js",
  "module": "dist/zero-g.esm.js",
  "js:next": "dist/zero-g.esm.js",
  "typings": "dist/index.d.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "typecheck": "tsc --project ./tsconfig.json --noEmit",
    "typecheck:dev": "tsc --project ./tsconfig.json --noEmit --watch",
    "build:tsdx": "tsdx build",
    "clean": "rimraf ./dist",
    "build": "run-s clean typecheck build:tsdx",
    "lint": "eslint ./src/* --ext .ts",
    "lint:fixall": "eslint ./src/* --ext .ts",
    "dev:parcel:basic": "parcel ./index.dev.html --out-file index.html",
    "dev:parcel:synchronized": "parcel ./index.synchronized.html --out-file index.html",
    "dev:parcel:laserpointer": "parcel ./index.laserpointer.html --out-file index.html",
    "dev:basic": "stmux -- [ \"yarn dev:parcel:basic\" : \"yarn typecheck:dev\" ]",
    "dev:synchronized": "stmux -- [ \"yarn dev:parcel:synchronized\" : \"yarn typecheck:dev\" ]",
    "dev:laserpointer": "stmux -- [ \"yarn dev:parcel:laserpointer\" : \"yarn typecheck:dev\" ]",
    "prepublishOnly": "npm run build",
    "test": "tsdx test --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benduran/zero-g.git"
  },
  "keywords": [
    "Pan",
    "Zoom",
    "Utility",
    "Image",
    "DOM",
    "Element",
    "Library"
  ],
  "author": "Benjamin Duran <stratodyne@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benduran/zero-g/issues"
  },
  "homepage": "https://github.com/benduran/zero-g#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/jest": "^26.0.9",
    "@types/parcel-bundler": "^1.12.1",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "rimraf": "^3.0.2",
    "stmux": "^1.8.0",
    "ts-jest": "^26.1.4",
    "tsdx": "^0.13.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typecheck && yarn test"
    }
  }
}
